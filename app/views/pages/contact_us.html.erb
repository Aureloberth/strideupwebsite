<!-- Begin Why Us Section -->
<section id="mortage" class="section">
<div class="section-inner">
  <div class="container section-content">
    <div class="row">
      <div class="col-md-12">
        <div class="section-title text-center">
          <br />
          <h2 class="main-title">Get priority access</h2>
          <br />
          <h3 class="sub-title">
            <i class="fa fa-check"></i> Leave us your email
          </h3>
        </div>
        <!-- //.section-title -->
      </div>
      <!-- //.col-md-12 -->
    </div>
    <br />    
    <!-- //.row -->

    <!-- Begin Content Boxes -->
    <div class="row">
      <div class="col-md-6 col-xs-12 text-left col-md-offset-3">
        <strong >I'm interested in: </strong>
        <br/>
        <br/>
        <%= form_for(:subscribe, url: subscribe_url(), method: :post, remote: true, html: {class: "text-center"}) do |f|%>
          <div class="btn-group btn-group-justified" id="btn-form-options" data-toggle="buttons">
            <label class="btn btn-primary active">
              <input type="radio" name="options" id="homebuying" value="homebuying" autocomplete="off" checked> Homebuying
            </label>

            <label class="btn">
              OR
            </label>

            <label class="btn btn-primary">
              <input type="radio" name="options" id="investing" value="investing" autocomplete="off"> Investing
            </label>
          </div>
          <br/>
          <br/>
          <div class="form-group">
            <%= f.text_field :fullname, class: "form-control input-lg", size: 40, placeholder:"Your full name" %>
          </div>
          <div class="form-group">
            <%= f.text_field :postcode, class: "form-control input-lg", size: 40, placeholder:"Postcode" %>
          </div>
          <%= f.hidden_field :email, value: params[:subscribe][:email] %>
          <br/>
          <button type="submit" class="btn btn-block btn-lg btn-default btn-rj">Join the waitlist</button>
        <% end %>

      </div> 
      <!-- //.col-xs-6 col-sm-6 col-md-3 -->     
    </div>
    <!-- //End Content Boxes -->      
  </div>
  <!-- //.section-content -->
</div>
<!-- //.section-inner -->
</section>
<!-- //End Why Us Section -->


